# Luna Backend Environment Variables
# Copy this file to .env.local and fill in your values

# ===========================================
# REQUIRED: Expo/React Native
# ===========================================

# Convex deployment URL (get from `npx convex dev` output)
EXPO_PUBLIC_CONVEX_URL=https://your-deployment.convex.cloud

# Clerk publishable key (get from clerk.com dashboard)
EXPO_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...

# ===========================================
# REQUIRED: Convex Environment Variables
# Set these via: npx convex env set <KEY> <VALUE>
# ===========================================

# Clerk webhook secret (get from Clerk dashboard > Webhooks)
# npx convex env set CLERK_WEBHOOK_SECRET whsec_...
CLERK_WEBHOOK_SECRET=whsec_...

# vLLM endpoint URL (Runpod serverless endpoint)
# npx convex env set VLLM_ENDPOINT_URL https://api.runpod.ai/v2/{endpoint_id}
VLLM_ENDPOINT_URL=https://api.runpod.ai/v2/your-endpoint-id

# Runpod API key (get from runpod.io dashboard)
# npx convex env set RUNPOD_API_KEY rp_...
RUNPOD_API_KEY=rp_...

# ComfyUI endpoint URL (Runpod serverless endpoint)
# npx convex env set COMFYUI_ENDPOINT_URL https://api.runpod.ai/v2/{endpoint_id}
COMFYUI_ENDPOINT_URL=https://api.runpod.ai/v2/your-comfyui-endpoint-id

# ===========================================
# TESTING (optional)
# ===========================================

# Convex URL for running tests
# Get this from `npx convex dev` output
CONVEX_URL=https://your-deployment.convex.cloud
